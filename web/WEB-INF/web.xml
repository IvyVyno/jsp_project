<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>getEmployeesServlet</servlet-name>
        <servlet-class>classes.Servlets.GetEmployeesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getDepartmentsServlet</servlet-name>
        <servlet-class>classes.Servlets.GetDepartmentsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getDepartmentsStuffServlet</servlet-name>
        <servlet-class>classes.Servlets.GetDepartmentsStuff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteEmployeeServlet</servlet-name>
        <servlet-class>classes.Servlets.DeleteEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editEmployeeServlet</servlet-name>
        <servlet-class>classes.Servlets.EditEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editDepartmentServlet</servlet-name>
        <servlet-class>classes.Servlets.EditDepartmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addEmployeeServlet</servlet-name>
        <servlet-class>classes.Servlets.AddEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getUnconfirmedEmployeesServlet</servlet-name>
        <servlet-class>classes.Servlets.GetUnconfirmedEmployeesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getUnconfirmedDepartmentsServlet</servlet-name>
        <servlet-class>classes.Servlets.GetUnconfirmedDepartmentsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addDepartmentServlet</servlet-name>
        <servlet-class>classes.Servlets.AddDepartmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteDepartmentServlet</servlet-name>
        <servlet-class>classes.Servlets.DeleteDepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getEmployeesServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getDepartmentsServlet</servlet-name>
        <url-pattern>/departments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getDepartmentsStuffServlet</servlet-name>
        <url-pattern>/getDepartmentsStuff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteEmployeeServlet</servlet-name>
        <url-pattern>/deleteEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editEmployeeServlet</servlet-name>
        <url-pattern>/editEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editDepartmentServlet</servlet-name>
        <url-pattern>/editDepartment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addEmployeeServlet</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getUnconfirmedEmployeesServlet</servlet-name>
        <url-pattern>/getUnconfirmedEmployees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getUnconfirmedDepartmentsServlet</servlet-name>
        <url-pattern>/getUnconfirmedDepartments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addDepartmentServlet</servlet-name>
        <url-pattern>/addDepartment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteDepartmentServlet</servlet-name>
        <url-pattern>/deleteDepartment</url-pattern>
    </servlet-mapping>
</web-app>